@model Product
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px">Are You Sure Want To Delete This Product </h2>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <div class="row align-items-center">


                        <!-- Right: Details -->
                        <div class="col-sm-6">
                            <small class="text-secondary">Product ID</small>
                            <div class="fw-semibold">@Model.Product_Id</div>
                        </div>
                        <div class="col-sm-6">
                            <small class="text-secondary">Product Name</small>
                            <div class="fw-semibold">@Model.Product_Name</div>
                        </div>

                        <div class="text-center mt-4">
                            <a href="@Url.Action("DeleteProduct", "Admin", new { id = @Model.Product_Id })" class="btn btn-danger px-4 me-2">Delete Customer</a>
                        </div>
                        <div class="text-center mt-4">
                            <a href="@Url.Action("FetchProducts", "Admin")" class="btn btn-warning px-4 me-2">See Category List</a>
                        </div>
                    </div> <!-- row -->

                </div>
            </div>
        </div>
    </div>
</div>
@model Category
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px">Are You Sure Want To Delete This Category </h2>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <div class="row align-items-center">

                     
                        <!-- Right: Details -->
                        <div class="col-md-8">
                            <h4 class="fw-bold">@Model.Category_Name</h4>
                            
                        </div>

                        <div class="text-center mt-4">
                            <a href="@Url.Action("DeleteCategory", "Admin", new { id = @Model.Category_Id })" class="btn btn-danger px-4 me-2">Delete Customer</a>
                        </div>
                        <div class="text-center mt-4">
                            <a href="@Url.Action("FetchCategory", "Admin")" class="btn btn-warning px-4 me-2">See Category List</a>
                        </div>
                    </div> <!-- row -->

                </div>
            </div>
        </div>
    </div>
</div>
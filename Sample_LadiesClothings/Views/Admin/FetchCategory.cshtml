@model List<Category>
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">All Category</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-success" href="@Url.Action("AddCategory", "Admin")">Add Category</a>
        <table class="table table-bordered table-striped text-center mt-3">
            <thead>
                <tr>
                    <th>Category Id</th>
                    <th>Category Name</th>
                    <th>Option</th>
                                   
                </tr>
            </thead>
            <tbody>
                @foreach (var cate in Model)
                {
                    <tr>
                        <td>@cate.Category_Id </td>
                        <td>@cate.Category_Name </td>
                        
                        <td>
                            <a href="@Url.Action("UpdateCategory", "Admin", new { id = @cate.Category_Id })" class="btn btn-warning">Update</a>
                            <a href="@Url.Action("DeletePermissionCategory", "Admin", new { id = @cate.Category_Id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>



@model List<Sample_LadiesClothings.Models.Customer>



<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase fw-bold text-primary" style="letter-spacing:3px">
        All Customers
    </h2>
    <hr />

    <!-- Search Bar -->
    <div class="row mb-3">
        <div class="col-md-6 offset-md-3">
            <input type="text" id="searchBox" class="form-control shadow-sm"
                   placeholder="🔍 Search customer by name, email, or city..." />
        </div>
    </div>

    <div class="card shadow-lg rounded-3">
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Sr No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Country</th>
                        <th>City</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Gender</th>
                        <th style="width: 220px;">Options</th>
                    </tr>
                </thead>
                <tbody id="customerTable">
                    @{
                        int currentPage = ViewBag.CurrentPage ?? 1;
                        int pageSize = ViewBag.PageSize ?? 10;
                        int serialNo = (currentPage - 1) * pageSize + 1;
                    }
                    @foreach (var cust in Model)
                    {
                        
                        <tr>
                            <td>@serialNo</td>
                            <td class="fw-semibold">@cust.Customer_Name</td>
                            <td>@cust.Customer_Email</td>
                            <td>@cust.Customer_Country</td>
                            <td>@cust.Customer_City</td>
                            <td>@cust.Customer_Address</td>
                            <td>@cust.Customer_Phone</td>
                            <td>
                                @if (cust.Customer_Gender == "Male")
                                {
                                    <span class="badge bg-primary">Male</span>
                                }
                                else
                                {
                                    <span class="badge bg-pink">Female</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("CustomerDetail", "Admin", new { id = cust.Customer_Id })"
                                   class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a href="@Url.Action("UpdateCustomer", "Admin", new { id = cust.Customer_Id })"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Update
                                </a>
                                <a href="@Url.Action("DeletPerssion", "Admin", new { id = cust.Customer_Id })"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this customer?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                        serialNo++;

                        <!-- ✅ This makes Sr.No increase row by row -->
                    }
                </tbody>
            </table>


            <!-- Pagination -->
            <nav>
                <ul class="pagination">
                    <!-- Previous Button -->
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="FetchCustomers" asp-controller="Admin" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                    </li>

                    <!-- Page Numbers -->
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="FetchCustomers" asp-controller="Admin" asp-route-page="@i">@i</a>
                        </li>
                    }

                    <!-- Next Button -->
                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="FetchCustomers" asp-controller="Admin" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>
</div>

<!-- Search filter script -->
<script>
    document.getElementById("searchBox").addEventListener("keyup", function () {
        var value = this.value.toLowerCase();
        var rows = document.querySelectorAll("#customerTable tr");
        rows.forEach(function (row) {
            row.style.display = row.textContent.toLowerCase().includes(value) ? "" : "none";
        });
    });
</script>

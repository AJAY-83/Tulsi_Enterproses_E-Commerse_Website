@model List<Category>
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Add New Product</h2>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post" asp-action="AddProduct" asp-controller="Admin" enctype="multipart/form-data">
            <input type="text" palceholder="Enter Your Product Name" name="Product_Name" class="form-control my-3" />
            <input type="text" palceholder="Enter Your Product Price" name="Product_Price" class="form-control my-3" />
            <input type="text" palceholder="Enter Your Product Name" name="Product_Name" class="form-control my-3" />
            <input type="file"  multiple name="Product_Image" class="form-control my-3" />

            @Html.Partial("CategoryDropdown", ViewData["Categories"])


            <input type="submit" value="Add Product" class="btn btn-success form-control my-3" />
        </form>
    </div>
    <div class="col-md-2"></div>
</div>